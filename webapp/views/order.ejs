            <button class="seeOrder" id="confirm">Confirm Order</button>
            <button class="colorChangeButton" onclick="toggleTheme()">Change Theme</button>
        </div>
    </section>

    <script src="functions.js"></script>
    <script>
        



        document.getElementById("loadSaverButton").addEventListener("click", function() {
            loadSaver();
        });

        document.getElementById("confirm").addEventListener("click", function() {
            orderPush();
        });


        document.getElementById("back").addEventListener("click", function() {
            window.location.href =localStorage.getItem("backTo");
        });

        logedUserID();

    </script>
